<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:controller="sample.Main"
            xmlns:fx="http://javafx.com/fxml">

    <Label fx:id="Title" LayoutX="150" AnchorPane.topAnchor="150" text="GAME OVER" >
        <font>
            <Font size="32.0"/>
        </font>
    </Label>

    <Text fx:id="Winner" LayoutX="50" AnchorPane.topAnchor="200" wrappingWidth="400" text="'One is left with the horrible feeling now that war settles nothing; that to win a war is as disastrous as to lose one.' - Agatha Christie">
        <font>
                <Font size="17.345"/>
        </font>
    </Text>

    <Button fx:id="PlayAgain" LayoutX="220" AnchorPane.topAnchor = "300" text="Play again?" onAction="#onStartButton" />

    <Button fx:id="Quit" LayoutX="220" AnchorPane.topAnchor="330" text="Quit Game" onAction="#onQuitButton"/>

</AnchorPane>